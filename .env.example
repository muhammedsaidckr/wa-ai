# Application Settings
APP_NAME=WhatsApp AI Bot
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./data/whatsapp_bot.db

# WhatsApp Provider: "twilio" or "meta"
WHATSAPP_PROVIDER=meta

# Twilio Configuration (if using WHATSAPP_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_WEBHOOK_URL=https://your-domain.com/webhook

# Meta WhatsApp Cloud API (if using WHATSAPP_PROVIDER=meta)
META_ACCESS_TOKEN=your_meta_access_token_here
META_PHONE_NUMBER_ID=your_phone_number_id_here
META_BUSINESS_ACCOUNT_ID=your_business_account_id_here
META_WEBHOOK_VERIFY_TOKEN=your_random_verify_token_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Whisper Configuration (for voice transcription)
WHISPER_MODEL=whisper-1

# Vision Configuration (for image analysis)
VISION_MODEL=gpt-4-vision-preview
VISION_MAX_TOKENS=500

# User Whitelist (comma-separated phone numbers with country code)
WHITELISTED_USERS=+1234567890,+0987654321

# Rate Limiting
RATE_LIMIT_MESSAGES=10
RATE_LIMIT_WINDOW_SECONDS=60

# Message Context
MAX_CONVERSATION_HISTORY=10

# Media Processing
MEDIA_DOWNLOAD_TIMEOUT=30
MEDIA_MAX_SIZE_MB=10
TEMP_MEDIA_DIR=./data/temp_media

# Security
SECRET_KEY=your-secret-key-here-generate-a-secure-random-string
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
